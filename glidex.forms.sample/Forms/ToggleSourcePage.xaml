<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Android.Glide.Sample.ToggleSourcePage"
             Title="Toggle!">
    <StackLayout Padding="5">
        <Button Text="Tap to get random images!" Clicked="Button_Clicked" />
        <Image x:Name="_image" HeightRequest="100" />
        <ImageButton x:Name="_imageButton" HeightRequest="40" />
        <Label x:Name="_label" />
    </StackLayout>
</ContentPage>